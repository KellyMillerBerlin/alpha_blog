<div class="page-content">
  <h1 class="text-center pt-4 page-title">Musings</h1>
    <div class="container">
    <% @articles.each do |article| %>
      <div class="row justify-content-md-center">
        <div class="col 8 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
              by Kelly Miller
            </div>
            <div class="card-body">
                <h5 class="card-title"><%= link_to article.title, article_path(article.id), class: "link-theme" %></h5>
                <p class="card-text"><%= truncate(article.description) %></p>
                <%= link_to "View", article_path(article.id), class: "btn btn-primary btn-theme-index" %>
                <%= link_to "Edit", edit_article_path(article.id), class: "btn btn-outline-dark" %>
                <%= link_to "Delete", article_path(article.id), method: :delete, class: "btn btn-outline-danger" %>
            </div>
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(article.created_at) %> ago, edited
                <%= time_ago_in_words(article.updated_at) %> ago
              </small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
